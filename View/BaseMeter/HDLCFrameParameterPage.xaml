<Page x:Class="三相智慧能源网关调试软件.View.BaseMeter.HDLCFrameParameterPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:三相智慧能源网关调试软件.View.BaseMeter"
      xmlns:converters="clr-namespace:三相智慧能源网关调试软件.Converters"

      mc:Ignorable="d"
      d:DesignHeight="450" d:DesignWidth="800"
      Title="HDLCFrameParameterPage">
    <Page.DataContext>
        <Binding Source="{StaticResource Locator}" Path="DlmsViewModel.HdlcFrameMaker" />
    </Page.DataContext>
    <Grid>
        <StackPanel>
            <TextBox Text="{Binding Hdlc46Frame.DestAddr,Converter={converters:BytesParseToIntConverter}}" />
            <TextBox Text="{Binding Hdlc46Frame.SourceAddr}" />
            <TextBlock Text="{Binding Hdlc46Frame.CurrentSendSequenceNumber}" />
            <TextBlock Text="{Binding Hdlc46Frame.CurrentReceiveSequenceNumber}" />
            <TextBox Text="{Binding Hdlc46Frame.Password}" />
            <TextBlock Text="{Binding Hdlc46Frame.LastCommand}" />
            <CheckBox x:Name="CheckBox21EMode"
                      IsChecked="{Binding Source={StaticResource Locator},Path=DlmsViewModel.IsUse21E}"
                      Content="Use21EMode" />

        </StackPanel>
    </Grid>
</Page>