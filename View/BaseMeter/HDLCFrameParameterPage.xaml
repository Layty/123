<Page x:Class="三相智慧能源网关调试软件.View.BaseMeter.HDLCFrameParameterPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:三相智慧能源网关调试软件.View.BaseMeter"
      xmlns:converters="clr-namespace:三相智慧能源网关调试软件.Converters"

      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="HDLCFrameParameterPage">
<Page.DataContext>
    <Binding Source="{StaticResource Locator}" Path="DlmsViewModel.HdlcFrameMaker"></Binding>
</Page.DataContext>
    <Grid>
        <StackPanel>
            <TextBox Text="{Binding Hdlc46Frame.DestAddr,Converter={converters:BytesParseToIntConverter}}"></TextBox>
            <TextBox Text="{Binding Hdlc46Frame.SourceAddr}"></TextBox>
            <TextBlock Text="{Binding Hdlc46Frame.CurrentSendSequenceNumber}"></TextBlock>
            <TextBlock Text="{Binding Hdlc46Frame.CurrentReceiveSequenceNumber}"></TextBlock>
            <TextBox Text="{Binding Hdlc46Frame.Password}"></TextBox>
            <TextBlock Text="{Binding Hdlc46Frame.LastCommand}"></TextBlock>
              <CheckBox x:Name="CheckBox21EMode" IsChecked="{Binding Source={StaticResource Locator},Path=DlmsViewModel.IsUse21E}" Content="Use21EMode"></CheckBox>
        </StackPanel>
    </Grid>
</Page>
