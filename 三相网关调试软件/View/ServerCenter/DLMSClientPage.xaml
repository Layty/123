<Page x:Class="三相智慧能源网关调试软件.View.ServerCenter.DLMSClientPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:三相智慧能源网关调试软件.View.ServerCenter"
      xmlns:myControl="clr-namespace:三相智慧能源网关调试软件.MyControl"
      mc:Ignorable="d"
      d:DesignHeight="450" d:DesignWidth="800"
      DataContext="{Binding Source={StaticResource Locator },Path=DlmsClient}"
      Title="DLMSClientPage">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal" Grid.Row="0">
            <Button Command="{Binding InitRequestCommand }"
                    Margin="3">
                InitRequest
            </Button>
            <Button Command="{Binding ReleaseRequestCommand }"
                    Margin="3">
                ReleaseRequest
            </Button>
            <StackPanel  DataContext="{Binding Source={StaticResource Locator },Path=TcpServer }" >
                <TextBlock Text="{Binding CurrentSocketClient.RemoteEndPoint}" />
                <ListBox x:Name="ListBox"  ItemsSource="{Binding TcpServerHelper.SocketClientList}"
                         SelectedItem="{Binding DLMSClient.CurrentSocket}" KeyDown="UIElement_OnKeyDown"
                         SelectionChanged="Selector_OnSelectionChanged" >

                </ListBox>
            </StackPanel>
         
        </StackPanel>

        <TabControl Grid.Row="1">
            <TabItem Header="Data">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <myControl:DataControl />
                </ScrollViewer>
            </TabItem>
            <TabItem Header="Register">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <myControl:RegisterControl />
                </ScrollViewer>
            </TabItem>
            <TabItem Header="UtilityTables">
               
                    <myControl:TaiAngControl />
            
            </TabItem>
            <TabItem Header="ProfileGeneric">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <myControl:ProfileGenericUserControl />
                </ScrollViewer>
            </TabItem>
        </TabControl>


    </Grid>
</Page>