<Page x:Class="三相智慧能源网关调试软件.View.ServerCenter.DLMSSettingsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
     
      xmlns:converters="clr-namespace:三相智慧能源网关调试软件.Converters"
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      xmlns:myControl="clr-namespace:三相智慧能源网关调试软件.MyControl"

      mc:Ignorable="d"
      d:DesignHeight="450" d:DesignWidth="800"
      Title="DLMSSettingsPage">
    <Page.DataContext>
        <Binding Source="{StaticResource Locator}" Path="DlmsBaseMeterViewModel" />
    </Page.DataContext>
    <Grid>
        <TabControl>
            <TabItem Header="DLMSSettings">
                <StackPanel Margin="3">
                    <TextBox Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                     materialDesign:HintAssist.Hint="DestAddress"
                     Text="{Binding  Client.MyDlmsSettings.ServerAddress}" />
                    <TextBox Text="{Binding  Client.MyDlmsSettings.ClientAddress}"
                     Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                     materialDesign:HintAssist.Hint="SourceAddress" />
                    <TextBlock Text="{Binding Client.HdlcFrameMaker.Hdlc46Frame.CurrentSendSequenceNumber}" />
                    <TextBlock Text="{Binding  Client.HdlcFrameMaker.Hdlc46Frame.CurrentReceiveSequenceNumber}" />
                    <TextBox Text="{Binding  Client.MyDlmsSettings.PasswordString}"
                     Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                     materialDesign:HintAssist.Hint="Password" />
                    <TextBlock Text="{Binding DlmsSettings.LastCommand}" />
                    <TextBox Text="{Binding Client.MyDlmsSettings.MaxReceivePduSize}" materialDesign:HintAssist.Hint="MaxReceivePduSize"
                     materialDesign:HintAssist.IsFloating="True" />
                    <TextBox Text="{Binding  Client.MyDlmsSettings.DlmsVersion}" materialDesign:HintAssist.Hint="DLMSVersion"
                     materialDesign:HintAssist.IsFloating="True" />
                    <ComboBox ItemsSource="{Binding Client.MyDlmsSettings.StartProtocolArray}"
                      SelectedItem="{Binding Client.MyDlmsSettings.StartProtocolType}"
                      materialDesign:HintAssist.Hint="StartProtocolType" materialDesign:HintAssist.IsFloating="True" />
                    <ComboBox ItemsSource="{Binding Client.MyDlmsSettings.CommunicationTypeArray}"
                      SelectedItem="{Binding Client.MyDlmsSettings.CommunicationType}"
                      materialDesign:HintAssist.Hint="CommunicationType" materialDesign:HintAssist.IsFloating="True" />
                    <ComboBox ItemsSource="{Binding Client.MyDlmsSettings.InterfaceTypeArray}"
                      SelectedItem="{Binding Client.MyDlmsSettings.InterfaceType}"
                      materialDesign:HintAssist.Hint="InterfaceType" materialDesign:HintAssist.IsFloating="True" />
                </StackPanel>
            </TabItem>
            <TabItem Header="SerialPort">
                <myControl:SerialPortControl></myControl:SerialPortControl>
            </TabItem>
            <TabItem Header="FrontEndProcessor">
                <myControl:DLMSFrontEndProcessorControl></myControl:DLMSFrontEndProcessorControl>
            </TabItem>
        </TabControl>
       
    </Grid>
</Page>