<Page x:Class="三相智慧能源网关调试软件.View.ServerCenter.DLMSSettingsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:converters="clr-namespace:三相智慧能源网关调试软件.Converters"
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      xmlns:myControl="clr-namespace:三相智慧能源网关调试软件.MyControl"
      xmlns:dlmsControl="clr-namespace:三相智慧能源网关调试软件.MyControl.DLMSControl"
      xmlns:dragablz="clr-namespace:Dragablz;assembly=Dragablz"
      mc:Ignorable="d"
      d:DesignHeight="450" d:DesignWidth="800"
      Title="DLMSSettingsPage">
    <Page.DataContext>
        <Binding Source="{StaticResource Locator}" Path="DlmsBaseMeterViewModel" />
    </Page.DataContext>
    <Grid>
       
            <TabControl >
            <TabItem Header="SerialPort">
                <myControl:SerialPortControl />
            </TabItem>
            <TabItem Header="FrontEndProcessor">
                <dlmsControl:FrontEndProcessorControl />
            </TabItem>
            <TabItem Header="Other Parameters">

                <StackPanel>
                    <TextBox
                        Text="{Binding  Client.MyDlmsSettings.ClientAddress,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}"
                        Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                        materialDesign:HintAssist.Hint="SourceAddress" />
                    <TextBox Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                             materialDesign:HintAssist.Hint="DestAddress"
                             Text="{Binding  Client.MyDlmsSettings.ServerAddress,Mode=TwoWay, UpdateSourceTrigger=PropertyChanged }" />
                    <TextBox Text="{Binding  Client.MyDlmsSettings.PasswordString}"
                             Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                             materialDesign:HintAssist.Hint="Password" />
                    <TextBlock Text="{Binding Client.MyDlmsSettings.LastCommand}" />

                    <TextBox Text="{Binding  Client.MyDlmsSettings.DlmsVersion}"
                             materialDesign:HintAssist.Hint="DLMSVersion"
                             materialDesign:HintAssist.IsFloating="True" />
                    <ComboBox ItemsSource="{Binding Client.MyDlmsSettings.StartProtocolArray}"
                              SelectedItem="{Binding Client.MyDlmsSettings.StartProtocolType,Mode=TwoWay}"
                              materialDesign:HintAssist.Hint="StartProtocolType"
                              materialDesign:HintAssist.IsFloating="True" />
                    <ComboBox ItemsSource="{Binding Client.MyDlmsSettings.CommunicationTypeArray}"
                              SelectedItem="{Binding Client.MyDlmsSettings.CommunicationType,Mode=TwoWay}"
                              materialDesign:HintAssist.Hint="CommunicationType"
                              materialDesign:HintAssist.IsFloating="True" />
                    <ComboBox ItemsSource="{Binding Client.MyDlmsSettings.InterfaceTypeArray}"
                              SelectedItem="{Binding Client.MyDlmsSettings.InterfaceType,Mode=TwoWay}"
                              materialDesign:HintAssist.Hint="InterfaceType"
                              materialDesign:HintAssist.IsFloating="True" />

                </StackPanel>

            </TabItem>
            <TabItem Header="HDLC Layer Parameters">

                <StackPanel>

                    <TextBox Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                             materialDesign:HintAssist.Hint="TransmitMaxInfoValue"
                             Text="{Binding  Client.MyDlmsSettings.DlmsInfo.TransmitMaxInfoValue}" />
                    <TextBox Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                             materialDesign:HintAssist.Hint="TransmitMaxWindowSize"
                             Text="{Binding  Client.MyDlmsSettings.DlmsInfo.TransmitMaxWindowSize}" />
                    <TextBox Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                             materialDesign:HintAssist.Hint="ReceiveMaxInfoValue"
                             Text="{Binding  Client.MyDlmsSettings.DlmsInfo.ReceiveMaxInfoValue}" />
                    <TextBox Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                             materialDesign:HintAssist.Hint="ReceiveMaxWindowSize"
                             Text="{Binding  Client.MyDlmsSettings.DlmsInfo.ReceiveMaxWindowSize}" />

                    <TextBox Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                             materialDesign:HintAssist.Hint="TransmitMaxInfoValueFromMeter"
                             Text="{Binding  Client.MyDlmsSettings.DlmsInfoFromMeter.TransmitMaxInfoValue}" />
                    <TextBox Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                             materialDesign:HintAssist.Hint="TransmitMaxWindowSizeFromMeter"
                             Text="{Binding  Client.MyDlmsSettings.DlmsInfoFromMeter.TransmitMaxWindowSize}" />
                    <TextBox Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                             materialDesign:HintAssist.Hint="ReceiveMaxInfoValueFromMeter"
                             Text="{Binding  Client.MyDlmsSettings.DlmsInfoFromMeter.ReceiveMaxInfoValue}" />
                    <TextBox Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                             materialDesign:HintAssist.Hint="ReceiveMaxWindowSizeFromMeter"
                             Text="{Binding  Client.MyDlmsSettings.DlmsInfoFromMeter.ReceiveMaxWindowSize}" />

                    <TextBox Text="{Binding Client.HdlcFrameMaker.Hdlc46Frame.CurrentSendSequenceNumber}"
                             Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                             materialDesign:HintAssist.Hint="CurrentSendSequenceNumber" />
                    <TextBox Text="{Binding  Client.HdlcFrameMaker.Hdlc46Frame.CurrentReceiveSequenceNumber}"
                             Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                             materialDesign:HintAssist.Hint="CurrentReceiveSequenceNumber" />
                </StackPanel>

            </TabItem>
            <TabItem Header="Application Layer Parameters">

                <StackPanel>
                    <CheckBox IsChecked="{Binding Client.MyDlmsSettings.UseLogicalNameReferencing}"
                              Content="UseLogicalNameReferencing" />
                    <TextBox Text="{Binding Client.MyDlmsSettings.SystemTitle}"
                             materialDesign:HintAssist.Hint="SystemTitle"
                             materialDesign:HintAssist.IsFloating="True" />
                    <TextBox Text="{Binding Client.MyDlmsSettings.MaxReceivePduSize}"
                             materialDesign:HintAssist.Hint="MaxReceivePduSize"
                             materialDesign:HintAssist.IsFloating="True" />
                    <ComboBox SelectedItem="{Binding Client.MyDlmsSettings.Priority}"
                              Style="{StaticResource MaterialDesignComboBox}"
                              ItemsSource="{Binding Client.MyDlmsSettings.PriorityArray}"
                              materialDesign:HintAssist.Hint="Priority"
                              materialDesign:HintAssist.IsFloating="True" />
                    <ComboBox SelectedItem="{Binding Client.MyDlmsSettings.ServiceClass}"
                              ItemsSource="{Binding Client.MyDlmsSettings.ServiceClassArray}"
                              materialDesign:HintAssist.Hint="ServiceClass"
                              materialDesign:HintAssist.IsFloating="True" />
                    <TextBox Text="{Binding Client.MyDlmsSettings.ProposedConformance}" />

                    <ListBox SelectionMode="Multiple" materialDesign:CheckBoxAssist.CheckBoxSize="2"
                             ItemsSource="{Binding Client.MyDlmsSettings.ProposedConformanceArray}" />
                    <ListBox />
                </StackPanel>


            </TabItem>


        </TabControl>


    </Grid>
</Page>