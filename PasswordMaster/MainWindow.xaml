<Window x:Class="PasswordMaster.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PasswordMaster"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>

        <local:SerialPortControl Grid.Column="0" />
        <local:SerialPortLogger Grid.Column="1" />

        <StackPanel Grid.Column="2">
            <TextBox x:Name="TextBoxCurrentPassword" Text="33333333" />
            <TextBox x:Name="TextBoxNextPassword" Text="12345678" Margin="5" Width="100" />
            <Button Content="set" Margin="5" Width="100" Click="ButtonBase_OnClick" />
        </StackPanel>


    </Grid>
</Window>